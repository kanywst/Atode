<% provide(:title,@user.name) %>
<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <h1>
            <% if @user.image? %>
                <%= image_tag @user.image.thumb.url %>
            <% else %>
                <%= gravatar_for @user %>
            <%end%>
            <%= @user.name%>
            </h1>
        </section>
    </aside>
    <div class="col-md-8">
        <% if @user.microposts.any? %>
            <h3>Articles (<%= @user.microposts.count %>)</h3>
            <ol class="microposts">
                <%= render partial: 'shared/micropost_profile', collection: @microposts%>
            </ol>
            <%= will_paginate @microposts%>
        <%end%>
    </div>
</div>
