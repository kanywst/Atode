<div id="micropost">
    <div class="col-md-3">
        <span class="title"><%= link_to micropost.title,micropost.url %></span>
        <% if micropost.og_image? %>
        <span class="og-image"><%= image_tag micropost.og_image%></span>
        <% end %>
        <span class="timestamp">
            Posted <%= time_ago_in_words(micropost.created_at)%> ago.
            <% if current_user?(micropost.user)%>
                <%= link_to "delete",micropost,method: :delete,
                                data: {confirm: "You Sure?"}%>
            <%end%>
        </span>
    </div>
</div>